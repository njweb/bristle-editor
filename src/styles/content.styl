.shape
  min-width 10vw
  min-height 10vw
  &--tall
    min-height 55vw
  &--fill
    width 100%
    height 100%
  &--red
    background-color rgba(color-red-600, 0.7)
  &--green
    background-color rgba(color-green-600, 0.7)
  &--blue
    background-color rgba(color-blue-600, 0.7)

//substance, composition, subject
.page
  width 100vw

.header
  background-color color-grey-400
  position absolute
  width: 100%
  &__content
    @extend .with-raleway
    @extend .font-size-sm
    color rgba(white, 0.9)
    padding 0.1rem
    max-width 64rem

.render-plane
  &__container
    height 90vh
  &__canvas
    width 100%
    height 100%

